<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_service_item"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/colorCbrYellow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_services_item"
            android:src="@drawable/ic_baseline_image_24"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        
        <TextView
            android:id="@+id/txt_service_item_name"
            android:text="Car Wash"
            android:textColor="@color/colorCbrBlack"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/txt_service_item_price"
                android:text="500 KSh"
                android:textColor="@color/colorCbrBlack"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_add_to_cart"
                android:text=" "
                android:textColor="@color/colorCbrBlack"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_shopping_cart_24" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>